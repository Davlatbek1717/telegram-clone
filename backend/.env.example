# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Optional - uses in-memory if not set)
# Get free MongoDB Atlas: https://www.mongodb.com/cloud/atlas/register
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/telegram_clone?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=900000

# Frontend URL (for production)
FRONTEND_URL=https://your-app.onrender.com
